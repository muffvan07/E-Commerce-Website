@model ECommerceWebsite.Models.Product

@{
    ViewData["Title"] = "EditProduct";
}

<h1>EditProduct</h1>

<h4>Products</h4>
<hr />
<form enctype="multipart/form-data" asp-action="EditProduct">
    <div class="row">
        <div class="col">
            @Html.HiddenFor(Model => Model.RetailerId)
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-control" required>
                    <option value="none" selected disabled hidden>Select an Option</option>
                    <option>Clothes</option>
                    <option>Grocery</option>
                    <option>HouseKeeping</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Unit" class="control-label"></label>
                <select asp-for="Unit" class="form-control" required>
                    <option value="none" selected disabled hidden>Select an Option</option>
                    <option>Pcs</option>
                    <option>Dozen</option>
                    <option>Packs</option>
                    <option>Kgs</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
        </div>
        <div class="col">
            <div class="form-group">
                <label asp-for="Discount" class="control-label"></label>
                <input asp-for="Discount" class="form-control" />
                <small id="" class="form-text text-muted">
                    in Percentage
                </small>
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <div class="input-group">
                    <input asp-for="Photo" class="form-control" />
                    <br /><br />
                    <input type="file" class="form-control" id="Photo2" name="Photo2" title="Choose File" />
                </div>
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div>
                <label for="IconText" id="imgpreview">Image Preview</label>
                <img alt="photo" id="Photo2" name="Photo2" style="height:100px; width:100px;margin-left:30px;" src="~/images/@Url.Content(Model.Photo)" />
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label><br />
                <div class="form-check form-check-inline">
                    <input asp-for="Status" class="form-check-input" type="checkbox" />
                    <label class="form-check-label">In Stock</label>
                </div>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>
    </div>
    <input type="submit" value="Save" class="btn btn-primary" /> |
    <a asp-action="ListProduct">Back to List</a>
</form>

@section scripts{
    <script>
    $(document).ready(function () {
        $('.custom-file-input').on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).next('.custom-file-label').html(fileName);
        })
    })
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}